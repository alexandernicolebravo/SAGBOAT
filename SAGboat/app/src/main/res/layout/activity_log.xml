<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/history"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- ScrollView for the log table -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- TableLayout for log data -->
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <!-- Table Headers Row with Dark Background -->
            <TableRow
                android:background="#001e24"
                android:padding="4dp"
                tools:ignore="ExtraText">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/date"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/time"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/ph"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/ph_level"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/turbidity"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/turbidity_level"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/delete"
                    android:textColor="#FF0000" /><!-- Red color for "Delete" -->
            </TableRow>

            <!-- Data rows will be dynamically added in LogActivity with alternating background colors -->
        </TableLayout>
    </ScrollView>
</LinearLayout>
