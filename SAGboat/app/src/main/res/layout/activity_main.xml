<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Top Bar with Dark Background -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#001e24"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Settings Icon -->
        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/content_description_settings"
            android:padding="8dp"
            android:src="@drawable/ic_settings"
            app:tint="#FFFFFF" />

        <!-- Centered Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Activity Log Icon -->
        <ImageView
            android:id="@+id/activityLogIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/content_description_activity_log"
            android:padding="8dp"
            android:src="@drawable/ic_activity_log"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- Main Camera/WebView Container -->

    <!-- Control Buttons with Icon and Text -->
    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="#001e24"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintVertical_bias="0.0">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/notConnectedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/not_connected"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Sensor Overlay (Left) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_margin="8dp"
            android:background="#4D000000"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/phText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ph_text"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/ph_level_description"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Sensor Overlay (Right) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_margin="8dp"
            android:background="#4D000000"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/turbidityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/turbidity_text"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/turbidityLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/turbidity_level_description"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Sensor Overlay (Bottom) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_margin="8dp"
            android:background="#4D000000"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/infraredText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infrared_null_text"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/startStopStreamButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#001e24"
            android:drawableLeft="@drawable/ic_start"
            android:drawablePadding="8dp"
            android:text="@string/start_stream"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/captureButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#001e24"
            android:drawableLeft="@drawable/ic_capture"
            android:drawablePadding="8dp"
            android:text="@string/capture"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/saveButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#001e24"
            android:drawableLeft="@drawable/ic_save"
            android:drawablePadding="8dp"
            android:text="@string/save_button_text"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
